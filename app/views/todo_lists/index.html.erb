<div>
  <% if user_signed_in? %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-dark btn-sm ml-md-4' %>
  <% else %>
  <%= link_to 'Log in', new_user_session_path, class: 'btn btn-dark btn-sm ml-md-4' %>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-dark btn-sm ml-md-2' %>
  <% end %>

  <a href="https://github.com/Leeroy6821/TodoList" class="fab fa-github"></a>
  <a href="https://gitlab.com/Leeroy6821/todo", class="fab fa-gitlab"></a>
</div>

<p id="notice"><%= notice %></p>
<h1>Todo Lists</h1>


<table class="titleFont">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to 'Show', todo_list, class: "btn btn-outline-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list), class: "btn btn-outline-info btn-sm" %></td>
        <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-outline-info btn-lg btn-block btn-sm' %>
